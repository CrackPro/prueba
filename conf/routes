# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# pagina de los registros

GET /registros                                 Application.registro

# pagina de las bajas

GET /baja                                 Application.baja

#pagina del buscador

GET /buscar_usuarios                        Application.buscarUsuarios

#funcion del registro

POST /altaRegistro                          Application.registroUsuario

#pagina para buscarUsuarios

GET /buscar_Usuarios                        Application.buscarUsuarios


GET /mostrar_usuarios                      Application.mostrarUsuarios

# Import CRUD routes
*      /admin                                   module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}
